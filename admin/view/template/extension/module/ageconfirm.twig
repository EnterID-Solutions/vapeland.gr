{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" name="savetype" value="savechanges" form="form-module" data-toggle="tooltip" title="{{ button_savechanges }}" class="btn btn-success">{{ button_savechanges }}</button>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">{{ button_save }}</button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        <div class="pull-right">
          <span>{{ text_store }}</span>
          <button type="button" data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle"><span>{{ store_name }}</span> <i class="fa fa-angle-down"></i></button>
          <ul class="dropdown-menu pull-right">
            <li><a href="index.php?route=extension/module/ageconfirm&user_token={{ user_token }}&store_id=0">{{ text_default }}</a></li>
            {% for store in stores %}
            <li><a href="index.php?route=extension/module/ageconfirm&user_token={{ user_token }}&store_id={{ store.store_id }}">{{ store.name }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="panel-body">
        <form action="{{ action }}`" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab"><i class="fa fa-cog"></i> {{ tab_general }}</a></li>
            <li><a href="#tab-image" data-toggle="tab"><i class="fa fa-image"></i> {{ tab_image }}</a></li>
            <li><a href="#tab-lang" data-toggle="tab"><i class="fa fa-language"></i> {{ tab_lang }}</a></li>
            <li><a href="#tab-popup-effect" data-toggle="tab"><i class="fa fa-magic"></i> {{ tab_popup_effect }}</a></li>
            <li><a href="#tab-css" data-toggle="tab"><i class="fa fa-desktop"></i> {{ tab_css }}</a></li>
            <li><a href="#tab-support" data-toggle="tab"><i class="fa fa-thumbs-up"></i> {{ tab_support }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane" id="tab-lang">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">
                {% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}"><span data-toggle="tooltip" data-container="#tab-lang" title="{{ help_title }}">{{ entry_title }}</span></label>
                    <div class="col-sm-10">
                      <input type="text" name="module_ageconfirm_description[{{ language.language_id }}][title]" placeholder="{{ placeholder_title }}" id="input-title{{ language.language_id }}" value="{{ module_ageconfirm_description[language.language_id].title ? module_ageconfirm_description[language.language_id].title }}" class="form-control" />
                        {% if error_module_ageconfirm_description[language.language_id].title %}
                        <div class="text-danger">{{ error_module_ageconfirm_description[language.language_id].title }}</div>
                        {% endif %}
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description{{ language.language_id }}"><span data-toggle="tooltip" data-container="#tab-lang" title="{{ help_description }}">{{ entry_description }}</span></label>
                    <div class="col-sm-10">
                      <textarea name="module_ageconfirm_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ module_ageconfirm_description[language.language_id].description ? module_ageconfirm_description[language.language_id].description }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-error-message{{ language.language_id }}"><span data-toggle="tooltip" data-container="#tab-lang" title="{{ help_error_message }}">{{ entry_error_message }}</span></label>
                    <div class="col-sm-10">
                      <textarea name="module_ageconfirm_description[{{ language.language_id }}][error_message]" placeholder="{{ entry_error_message }}" id="input-error-message{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ module_ageconfirm_description[language.language_id].error_message ? module_ageconfirm_description[language.language_id].error_message }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-agree{{ language.language_id }}"><span data-toggle="tooltip" data-container="#tab-lang" title="{{ help_agree_button }}">{{ entry_agree }}</span></label>
                    <div class="col-sm-10">
                      <input type="text" name="module_ageconfirm_description[{{ language.language_id }}][agree]" placeholder="{{ placeholder_agree }}" id="input-agree{{ language.language_id }}" value="{{ module_ageconfirm_description[language.language_id].agree ? module_ageconfirm_description[language.language_id].agree }}" class="form-control" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-decline{{ language.language_id }}"><span data-toggle="tooltip" data-container="#tab-lang" title="{{ help_decline_button }}">{{ entry_decline }}</span></label>
                    <div class="col-sm-10">
                      <input type="text" name="module_ageconfirm_description[{{ language.language_id }}][decline]" placeholder="{{ placeholder_decline }}" id="input-decline{{ language.language_id }}" value="{{ module_ageconfirm_description[language.language_id].decline ? module_ageconfirm_description[language.language_id].decline }}" class="form-control" />
                    </div>
                  </div>
                </div>
                {% endfor %}
              </div>
            </div>
            <div id="tab-general" class="tab-pane active">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="module_ageconfirm_status" id="input-status" class="form-control">
                    {% if module_ageconfirm_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-force"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_force }}">{{ entry_force }}</span></label>
                <div class="col-sm-10">
                  <select name="module_ageconfirm_force" id="input-force" class="form-control">
                    {% if module_ageconfirm_force %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-circle"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_circle }}">{{ entry_circle }}</span></label>
                <div class="col-sm-10">
                  <label for="input-circle" class="radio-inline"><input type="radio" {% if module_ageconfirm_circle == 'CIRCLE' %} {{  'checked="checked"' }} {% endif %} name="module_ageconfirm_circle" value="CIRCLE" id="input-circle" /> {{ text_circle }}</label>
                  <label for="input-square" class="radio-inline"><input type="radio" {% if module_ageconfirm_circle == 'SQUARE' %} {{ 'checked="checked"' }} {% endif %} name="module_ageconfirm_circle" value="SQUARE" id="input-square" /> {{ text_square }}</label>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-border-width"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_border }}">{{ entry_border_width }}</span></label>
                <div class="col-sm-2">
                  <input type="number" name="module_ageconfirm_border_width" value="{{ module_ageconfirm_border_width }}" placeholder="{{ placeholder_border }}" id="input-border-width" class="form-control" />
                </div>
                <div class="col-sm-2">
                  <div class="input-group colorpicker colorpicker-component"> 
                    <input type="text" name="module_ageconfirm_border_color" value="{{ module_ageconfirm_border_color }}" class="form-control" /> 
                    <span class="input-group-addon"><i></i></span> 
                  </div>
                </div>
              </div>  
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-background-color"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_background_color }}">{{ entry_background_color }}</span></label>
                <div class="col-sm-4">
                  <div class="input-group colorpicker colorpicker-component"> 
                    <input id="input-background-color" type="text" name="module_ageconfirm_background_color" value="{{ module_ageconfirm_background_color }}" class="form-control" /> 
                    <span class="input-group-addon"><i></i></span> 
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-text-color"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_text_color }}">{{ entry_text_color }}</span></label>
                <div class="col-sm-4">
                  <div class="input-group colorpicker colorpicker-component"> 
                    <input id="input-text-color" type="text" name="module_ageconfirm_text_color" value="{{ module_ageconfirm_text_color }}" class="form-control" /> 
                    <span class="input-group-addon"><i></i></span> 
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-reopen"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_reopen }}">{{ entry_reopen }}</span></label>
                <div class="col-sm-10">
                  <label class="radio-inline">
                    <input type="radio" {% if module_ageconfirm_reopen %} checked="checked" {% endif %} name="module_ageconfirm_reopen" value="1" id="input-reopen" />  {{ text_yes }}
                  </label>
                  <label class="radio-inline">
                    <input type="radio" {% if not module_ageconfirm_reopen %} checked="checked" {% endif %} name="module_ageconfirm_reopen" value="0" id="input-reopen-no" /> {{ text_no }}
                  </label>
                  {% if error_reopen %}
                  <div class="text-danger">{{ error_reopen }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group cookie-day {% if not module_ageconfirm_reopen %} {{ 'hide' }} {% endif %}">
                <label class="col-sm-2 control-label" for="input-days"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_days }}">{{ entry_days }}</span></label>
                <div class="col-sm-4">
                  <input type="text" name="module_ageconfirm_days" value="{{ module_ageconfirm_days }}" placeholder="{{ placeholder_days }}" id="input-days" class="form-control" />
                  {% if error_days %}
                  <div class="text-danger">{{ error_days }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-redirect"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_redirect }}">{{ entry_redirect }}</span></label>
                <div class="col-sm-10">
                  <label class="radio-inline">
                    <input type="radio" {% if module_ageconfirm_redirect %} checked="checked" {% endif %} name="module_ageconfirm_redirect" value="1" id="input-redirect" /> {{ text_yes }}
                  </label>
                  <label class="radio-inline">
                    <input type="radio" {% if not module_ageconfirm_redirect %} checked="checked" {% endif %} name="module_ageconfirm_redirect" value="0" id="input-redirect-no" /> {{ text_no }}
                  </label>
                </div>
              </div>
              <div class="form-group required linkredirect">
                <label class="col-sm-2 control-label" for="input-link"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_link }}">{{ entry_link }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="module_ageconfirm_link" value="{{ module_ageconfirm_link }}" placeholder="{{ placeholder_link }}" id="input-link" class="form-control" />
                  {% if error_link %}
                  <div class="text-danger">{{ error_link }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
            <div id="tab-image" class="tab-pane">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-logo">{{ entry_logo }}</label>
                <div class="col-sm-10"><a href="" id="thumb-logo" data-toggle="image" class="img-thumbnail"><img src="{{ logo }}" alt="thumb-logo" title="thumb-logo" data-placeholder="{{ placeholder }}" /></a>
                  <input type="hidden" name="module_ageconfirm_logo" value="{{ module_ageconfirm_logo }}" id="input-logo" />
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-backimage">{{ entry_backimage }}</label>
                <div class="col-sm-10"><a href="" id="thumb-backimage" data-toggle="image" class="img-thumbnail"><img src="{{ backimage }}" alt="thumb-backimage" title="thumb-backimage" data-placeholder="{{ placeholder }}" /></a>
                  <input type="hidden" name="module_ageconfirm_backimage" value="{{ module_ageconfirm_backimage }}" id="input-backimage" />
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-popup-effect">
              <div class="row flex">
                <div class="col-sm-6 col-xs-12 flex flex-adjust">
                  <div class="row">
                    {% for i in 1..20 %}
                      <div class="col-lg-3 col-xs-6 col-md-3 col-sm-6">
                        <div class="tile">
                          <div class="tile-body text-center switch-buttons">
                            <button type="button" class="btn btn-default btn-block md-trigger md-setperspective" rel="{{ i }}" data-modal="modal-{{ i }}">{{ text_effect }} {{ i }}</button>
                            <div id="input-reviews-{{ i }}" class="btns">
                              <label class="radio-inline">
                                <input type="radio" {% if module_ageconfirm_effect == i %} {{ 'checked="checked"' }} {% endif %} name="module_ageconfirm_effect" value="{{ i }}" id="input-circle" />
                                <span class='btn'>{{ button_apply }}</span>
                              </label>
                            </div>
                          </div>
                        </div>
                      </div>
                     {% endfor %}
                  </div>
                 </div>
                 <div class="col-sm-6 col-xs-12 flex" id="demo-area">
                    <div class="in-demo">
                      <div class="heading-demo text-center">
                        <i class="fa fa-5x fa-smile-o" aria-hidden="true"></i>
                        <h1>{{ text_live }}</h1>
                        <h3>{{ text_wanna }}</h3>
                      </div>
                      <div class="myhtml"></div>
                    </div>
                 </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-css">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-css"><span data-toggle="tooltip" data-container="#tab-css" title="{{ help_css }}">{{ entry_css }}</span></label>
                <div class="col-sm-10">
                  <textarea name="module_ageconfirm_css" rows="10" placeholder="{{ placeholder_css }}" id="input-css" class="form-control">{{ module_ageconfirm_css }}</textarea>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-support">
              <fieldset id="module-points">
                <legend class="text-mpsuccess">Module Points</legend>
                <div class="form-group">
                  <div class="col-md-12 col-xs-12">
                    <div class="bs-callout bs-callout-info"> 
                      <h4>Module Points Age Verification</h4> 
                      <p>Module points age verification popup is age checker verification method for sites, who want to protect their content for adult users only.</p> 
                    </div>
                    <h4 class="text-mpsuccess text-center"><i class="fa fa-thumbs-up fa-mp" aria-hidden="true"></i> Thanks For Choosing Our Extension</h4>
                     <ul class="list-group list-hover">
                      <li class="list-group-item clearfix">Installed Version <span class="badge"><i class="fa fa-gg" aria-hidden="true"></i> V.1.0</span></li>
                      <li class="list-group-item clearfix">Latest Version <span class="badge"><a  target="_blank" href="https://www.opencart.com/index.php?route=marketplace/extension/info&extension_id=28776"><i class="fa fa-refresh" aria-hidden="true"></i> Check</a></span></li>
                      <li class="list-group-item clearfix">Get More Our Extensions On Opencart Market Place<span class="badge"><a target="_blank" href="https://www.opencart.com/index.php?route=marketplace/extension&filter_member=modulepoints"><i class="fa fa-opencart"></i> Click Here</a></span></li>
                    </ul>
                    <h4 class="text-mpsuccess text-center"><i class="fa fa-phone fa-mp" aria-hidden="true"></i> Please Contact Us In Case Any Issue Or Give Feedback!</h4>
                    <ul class="list-group">
                      <li class="list-group-item clearfix">support@modulepoints.com <span class="badge"><a href="mailto:support@modulepoints.com?Subject=Request Support: Age Version &body=Module ID: https://www.opencart.com/index.php?route=marketplace/extension/info&extension_id=28776"><i class="fa fa-envelope"></i> Email To Support</a></span></li> 
                    </ul>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
