<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td width="1" style="text-align: center;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
        <td class="text-center">Product Id</td>
        <td class="text-left">Product Name</td>
        <td class="text-left">Option Out of Stock</td>
        <td class="text-left">Selected Options</td>
        <td class="text-center">Quantity</td>
		<td class="text-left col-compact">Customer Email</td>
        <td class="text-center col-detail">Customer Details</td>
        <td class="text-center col-detail">Customer Comment</td>
        <td class="text-center col-detail">Customer Language</td>
        <td class="text-left col-detail">Store</td>
        <td class="text-left">Customer Alert Set On</td>
        <td class="text-left">Notified Date</td>
      </tr>
    </thead>
    <tbody>
      {% if (records) %} 
      {% for record in records %} 
      <tr>
        <td style="text-align: center;"><input type="checkbox" name="selected[]" value="{{ record['id'] }}" /></td>
        <td class="text-center"><a onclick="showProductReport('{{ record['product_id'] }}');">{{ record['product_id'] }}</a></td>
        <td class="text-left">
			<a href="{{ record['product_link'] }}" target="_blank">{{ record['name'] }}</a> <br />
			<div class="col-detail label label-warning">Available Qty: {{ record['product_qty'] }}</div> <br />
			<div class="col-detail label label-primary" data-toggle="tooltip" title="Stock Status"> {{ record['product_stock_status'] }}</div>
		</td>
        <td class="text-left">{{ record['selected_option'] }}</td>
        <td class="text-left">{{ record['all_selected_option'] }}</td>
        <td class="text-center">{{ record['qty'] }}</td>
		<td class="text-left col-compact">{{ record['email'] }}</td>
        <td class="col-detail"><table class="table table-bordered table-hover" style="min-width:200px;">
            <tr>
              <td class="text-center"><span data-toggle="tooltip" title="Email"><i class="fa fa-envelope" aria-hidden="true"></i></span></td>
              <td>{{ record['email'] }}</td>
            </tr>
            <tr>
              <td class="text-center"><span data-toggle="tooltip" title="IP Address"><i class="fa fa-globe" aria-hidden="true"></i></span></td>
              <td>{{ record['ip'] }}</td>
            </tr>
            <tr>
              <td class="text-center"><span data-toggle="tooltip" title="Name"><i class="fa fa-user" aria-hidden="true"></i></span></td>
              <td>{{ record['fname'] }}</td>
            </tr>
            <tr>
              <td class="text-center"><span data-toggle="tooltip" title="Phone"><i class="fa fa-phone" aria-hidden="true"></i></span></td>
              <td>{{ record['phone'] }}</td>
            </tr>
			<tr>
              <td class="text-center"><span data-toggle="tooltip" title="Customer Type"><i class="fa fa-street-view" aria-hidden="true"></i></span></td>
              <td>{{ record['customer_type'] }}</td>
            </tr>
			<tr>
              <td class="text-center"><span data-toggle="tooltip" title="Previous Purchases"><i class="fa fa-usd" aria-hidden="true"></i></span></td>
              <td>{{ record['customer_purchases'] }}</td>
            </tr>
          </table></td>
        <td class="text-left col-detail" style="word-break:break-all;">{{ record['comment'] }}</td>
        <td class="text-center col-detail">{{ record['language_name']['name'] }}</td>
        <td class="text-left col-detail"><a data-toggle="tooltip" title="{{ record['store_url'] }}">{{ record['store_name'] }}</a></td>
        <td class="text-right">{{ record['enquiry_date'] }}</td>
        <td class="text-right">{{ record['notify_date'] }}</td>
      </tr>
      {% endfor %} 
      {% else %} 
      <tr>
        <td class="text-center" colspan="12">No Records Found</td>
      </tr>
      {% endif %} 
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>
  <div class="col-sm-6 text-right">{{ results }}</div>
</div>
<script type="text/javascript">
$('.col-compact').hide();
$('.col-detail').show();
</script>