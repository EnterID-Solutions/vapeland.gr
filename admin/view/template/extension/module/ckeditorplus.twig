{{ header }}{{ column_left }}
<div id="content">

<div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
</div>

<div class="container-fluid">

    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
<!-- form -->      
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <ul class="nav nav-tabs">
                      <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
                      
                      <li><a href="#tab-info" data-toggle="tab">{{ tab_info }}</a></li> 
          </ul>
    <div class="tab-content">  
  <div class="tab-pane active" id="tab-general">
             <div class="form-group"> 
                <label class="col-sm-2 control-label" for="input-ckeditorplus_language"><span data-toggle="tooltip" data-container="#tab-general" title="<?php echo $entry_language_info; ?>">{{ entry_language }}</span></label>
                <div class="col-sm-10">
                  <select name="ckeditorplus_language" id="input-ckeditorplus_language" class="form-control">
                    <option value="en">EN</option>
                      {% for language in languages %}
                      <option value="{{ language }}" 
                      {% if language == ckeditorplus_language %} selected {% endif %} >
                      {{ language|upper }}
                      {% endfor %}
                      </option>
                  </select>  
                </div>
              </div>



            <div class="form-group"> 
                <label class="col-sm-2 control-label" for="input-ckeditorplus_skin"><span data-toggle="tooltip" data-container="#tab-general" title="<?php echo $entry_skin_info; ?>">{{ entry_skin }}</span></label>
                <div class="col-sm-10">
                  <select name="ckeditorplus_skin" id="input-ckeditorplus_skin" class="form-control">
                    <option value="kama">KAMA</option>
                      {% for skin in skin %}
                      <option value="{{ skin }}" 
                      {% if skin == ckeditorplus_skin %} selected {% endif %} >
                      {{ skin|upper }}
                      {% endfor %}
                  </select>  
                </div>
              </div>  

              <div class="form-group">   
                <label class="col-sm-2 control-label" for="input-ckeditorplus_height"><span data-toggle="tooltip" data-container="#tab-general" title="{{ entry_height_info }}">{{ entry_height }}</span></label>
                <div class="col-sm-10">
                  <input type="text" id="input-ckeditorplus_height" name="ckeditorplus_height"  value="{{ ckeditorplus_height }}" placeholder="{{ entry_height }}"   class="form-control" />
                </div>
              </div>

              <div class="form-group"> 
                <label class="col-sm-2 control-label" for="input-ckeditorplus_enhanced"><span data-toggle="tooltip" data-container="#tab-general" title="{{ entry_enhanced_info }}">{{ entry_enhanced }}</span></label>
                <div class="col-sm-10">
                  <select name="ckeditorplus_enhanced" id="input-ckeditorplus_enhanced" class="form-control">
                    {% if ckeditorplus_enhanced %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                    {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select> 
                </div>
              </div>

              <div class="form-group"> 
                <label class="col-sm-2 control-label" for="input-ckeditorplus_en_img"><span data-toggle="tooltip" data-container="#tab-general" title="{{ entry_enhanced_image_info }}">{{ entry_enhanced_image }}</span></label>
                <div class="col-sm-10">
                  <select name="ckeditorplus_en_img" id="input-ckeditorplus_en_img" class="form-control">
                    {% if ckeditorplus_en_img %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                    {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select> 
                </div>
              </div>
            
            <div class="form-group"> 
                <label class="col-sm-2 control-label" for="ckeditorplus_status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="ckeditorplus_status" id="input-ckeditorplus_status" class="form-control">
                    {% if ckeditorplus_status %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                    {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select> 
                </div>
              </div>
       </div>
       
        <div class="tab-pane" id="tab-info">
          <div class="form-group"> 
              <div class="col-sm-12"> 
                <p style="font-size: 18px;color: #00a3d9;"><b>Thank you for using our extensions.</b></p>
                <p>To get support email us to <a href="mailto:support@dotbox.eu">support@dotbox.eu</a>.</p>
                <p>We are happy to help.</p>
                <p>If you like what you see leave us a comment and rate our extensions.</p>
              </div>   
          </div>
          {% if dotbox %}
          <div class="form-group"> 
            <div class="col-sm-12"> 
              <p style="font-size: 16px;color: #f27f0f;"><b>Have a look at our other extensions:</b></p>
            </div>
            <div class="col-sm-12"> 
              <div class="row">
                {% for extension in dotbox[0] %}
                    {% if extension['id'] != 0 %}
                      <div class="col-xs-6 col-md-2 col-sm-3">
                        <div class="thumbnail" title="Click to Read more..." style="margin-bottom: 0px;" >
                          <a href="http://www.opencart.com/index.php?route=marketplace/extension/info&extension_id={{ extension['id'] }}" target="_blank">
                          <img src="{{ extension['img'] }}" alt="{{ extension['title'] }}" width="100%" />
                          </a> 
                        </div>
                        <span style="height: 40px;text-align: center;display: block;font-weight: 300;font-size: 14px;">{{ extension['title'] }}</span>
                      </div>
                    {% endif %}
                {% endfor %}
                </div>
                <div class="row">
                {% for info in dotbox[1] %}
                  {% if info['id'] != 0 %}
                  <div class="col-xs-12 ">
                    <span style="{{ info['style'] }}">
                      {{ info['textb'] }}
                      <a href="{{ info['url'] }}" target="_blank">{{ info['title'] }}</a>
                      {{ info['texta'] }}
                    </span>
                  </div>
                  {% endif %}
                {% endfor %}
                </div>
              </div>  
            </div>
          {% endif %}
      </div> 
        
      </div>
     </form>   
      </div>
    </div>
  </div>
</div>
{{ footer }}