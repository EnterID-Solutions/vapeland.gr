{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error.error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error.error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-stockupdate-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_stockupdate_status" id="input-stockupdate-status" class="form-control">
                {% if module_stockupdate_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-remote-url">{{ entry_url }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_stockupdate_url" value="{{module_stockupdate_url}}" class="form-control" id="input-remote-url" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-remote-version">{{ entry_oc_version }}</label>
            <div class="col-sm-10">
              <select name="module_stockupdate_version" id="input-remote-version" class="form-control">
                {% if module_stockupdate_version == '3' %}
                <option value="3" selected="selected">{{ text_oc_3 }}</option>
                <option value="2">{{ text_oc_2 }}</option>
                {% else %}
                <option value="3">{{ text_oc_3 }}</option>
                <option value="2" selected="selected">{{ text_oc_2 }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-remote-username">{{ entry_username }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_stockupdate_username" value="{{module_stockupdate_username}}" class="form-control" id="input-remote-username" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-remote-password">{{ entry_password }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_stockupdate_password" value="{{module_stockupdate_password}}" class="form-control" id="input-remote-password" />
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
